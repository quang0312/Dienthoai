

@model List<ShopOnline.Context.SanPham>

@{
    ViewBag.Title = "Product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            border-collapse: collapse;
            width: 85%;
            margin: auto;
        }

        th, td {
            text-align: left;
            padding: 5px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        dlink {
            text-align:center;

        }
    </style>
</head>
<body>

    <h2 style="text-align:center">Quản Lý Sản Phẩm</h2>
    <p style="text-align:center"> @Html.ActionLink("Create", "Create", "Product")</p>

    @using (Html.BeginForm("Product", "Product", FormMethod.Get))
    {
        <p style="text-align:center">
            Tìm tên sản phẩm : @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
            <input type="submit" value="Tìm Kiếm" />
        </p>
    }



    <div style="overflow-x:auto;">
        <table>
            <tr>
                <th>Mã Sản Phẩm</th>
                <th>Mã Loại Sản Phẩm</th>
                <th>Mã Nhà sản xuất</th>
                <th>Tên Sản Phẩm</th>

                <th>Hình Chính</th>
                <th>Giá</th>

            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaSP</td>
                    <td>@item.MaLoaiSP</td>
                    <td>@item.MaNSX</td>
                    <td>@item.TenSP</td>

                    <td><img src="~/Asset/img/@item.HinhChinh" style="width:50px;height:70px;" /></td>
                    <td class="item_price"> @item.Gia.Value.ToString("#,##") VNĐ </td>

                    <td>
                        <a href="@Url.Action("Edit", "Product", new { id = item.MaSP })" class="nav-link active">Edit</a>
                        <a href="@Url.Action("Detais", "Product", new { id = item.MaSP })" class="nav-link active">Detais</a>
                        <a href="@Url.Action("Delete", "Product", new { id = item.MaSP })" class="nav-link active">Delete</a>

                    </td>
                </tr>
            }

        </table>

       
    </div>
    


</body>
</html>

