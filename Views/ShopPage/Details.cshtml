                                    <div class="product-hover">
                                        <a href="" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ</a>
                                        <a href="~/ShopPage/Details/SP09" class="view-details-link"><i class="fa fa-link"></i> Chi Tiết</a>
                                    </div>
                                </div>

                                <h2><a href="~/ShopPage/Details/SP09">OPPO Find X3</a></h2>

                                <div class="product-carousel-price">
                                    <ins>11.600.000 VNĐ</ins> 
                                </div>
                            </div>
                            <div class="single-product">
                                <div class="product-f-image">
                                    <img src="~/Asset/img/4.jpg" alt="">
                                    <div class="product-hover">
                                        <a href="" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ</a>
                                        <a href="~/ShopPage/Details/SP04" class="view-details-link"><i class="fa fa-link"></i> Chi Tiết</a>
