                    </div>
                    <div class="thubmnail-recent">
                        <a href="~/ShopPage/Details/SP09"> <img style="width:70px; height:70px" src="~/Asset/img/9.jpg" class="recent-thumb" alt=""></a>
                        <h2><a href="~/ShopPage/Details/SP09">OPPO Find X3</a></h2>
                        <div class="product-sidebar-price">
                            <ins>11.600.000 VNĐ</ins> 
                        </div>
                    </div>
                </div>

                <div class="single-sidebar">
                    <h2 class="sidebar-title">Bài đăng gần đây</h2>
                    <ul>
                       
                        <li><a href="~/ShopPage/Details/SP16">SamSung S20 Ultra</a></li>
                        <li><a href="~/ShopPage/Details/SP13">Xiaomi Mi 11 Lite</a></li>
                        <li><a href="~/ShopPage/Details/SP02">iPhone 11 Pro</a></li>
                        <li><a href="~/ShopPage/Details/SP03">iPhone 12 Pro</a></li>
                        <li><a href="~/ShopPage/Details/SP09">OPPO Find X3</a></li>
                    </ul>
                </div>
            </div>

            <div class="col-md-8">
                <div class="product-content-right">
                    <div class="product-breadcroumb">
                        @Html.ActionLink("Home", "Index", "Home")

                        @Html.ActionLink(Model.TenSP, "Details", "ShopPage", new { id = Model.MaSP })
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="product-images">
                                <div class="product-main-img">
                                    <img style="width:295px;height:340px;" src="~/Asset/img/@Model.HinhChinh" alt="">
                                </div>

                                <div class="product-gallery">
                                    <img src="~/Asset/img/@Model.Hinh1" alt="">
                                    <img src="~/Asset/img/@Model.Hinh2" alt="">
                                    <img src="~/Asset/img/@Model.Hinh3" alt="">
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="product-inner">
                                <h2 class="product-name">@Model.TenSP</h2>
                                <div class="product-inner-price">
                                    <h5 class="item_price">Price: @Model.Gia.Value.ToString("#,##") VNĐ</h5>
                                </div>

                                <form action="" class="cart">
                                    <div class="quantity">
                                        <input type="number" size="4"   class="input-text qty text" title="Qty" value="1" name="Quantity" min="1" step="1">
                                    </div>
                                    <a href="@Url.Action("AddToCart","Cart", new { @id = Model.MaSP, @strURL = Request.Url.ToString() })" class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow">Add to cart</a>
                                </form>

                                <div class="product-inner-category">
                                    <p>Category: <a href="">Summer</a>. Tags: <a href="">awesome</a>, <a href="">best</a>, <a href="">sale</a>, <a href="">shoes</a>. </p>
                                </div>

                                <div role="tabpanel">
                                    <ul class="product-tab" role="tablist">
                                        <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Description</a></li>
                                        <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Reviews</a></li>
                                    </ul>
                                    <div class="tab-content">
                                        <div role="tabpanel" class="tab-pane fade in active" id="home">
                                            <h2>Mô tả Sản Phẩm</h2>
                                            <p>@Html.Raw(Model.MoTa)</p>
                                        </div>
                                        <div role="tabpanel" class="tab-pane fade" id="profile">
                                            <h2>Reviews</h2>
                                            <div class="submit-review">
                                                <p><label for="name">Name</label> <input name="name" type="text"></p>
                                                <p><label for="email">Email</label> <input name="email" type="email"></p>
                                                <div class="rating-chooser">
                                                    <p>Your rating</p>
                                                    <div class="rating-wrap-post">
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                    </div>
                                                </div>
                                                <p><label for="review">Your review</label> <textarea name="review" id="" cols="30" rows="10"></textarea></p>
                                                <p><input type="submit" value="Submit"></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>


                    <div class="related-products-wrapper">
                        <h2 class="related-products-title">Sản Phẩm Liên Quan</h2>
                        <div class="related-products-carousel">

                            <div class="single-product">
                                <div class="product-f-image">
                                    <img src="~/Asset/img/3.jpg" alt="">
