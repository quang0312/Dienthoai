@using ShopOnline.Context
@model ItemGioHang

@{
    ViewBag.Title = "SuaGioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<ItemGioHang> lstGioHang = (List<ItemGioHang>)ViewBag.GioHang;
}







<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="single-sidebar">
                    <h2 class="sidebar-title">Search Products</h2>
                    <form action="#">
                        <input type="text" placeholder="Search products...">
                        <input type="submit" value="Search">
                    </form>
                </div>

                <div class="single-sidebar">
                    <h2 class="sidebar-title">Products</h2>
                    <div class="thubmnail-recent">
                        <img src="img/product-thumb-1.jpg" class="recent-thumb" alt="">
                        <h2><a href="single-product.html">Sony Smart TV - 2015</a></h2>
                        <div class="product-sidebar-price">
                            <ins>$700.00</ins> <del>$800.00</del>
                        </div>
                    </div>
                    <div class="thubmnail-recent">
                        <img src="img/product-thumb-1.jpg" class="recent-thumb" alt="">
                        <h2><a href="single-product.html">Sony Smart TV - 2015</a></h2>
                        <div class="product-sidebar-price">
                            <ins>$700.00</ins> <del>$800.00</del>
                        </div>
                    </div>
                    <div class="thubmnail-recent">
                        <img src="img/product-thumb-1.jpg" class="recent-thumb" alt="">
                        <h2><a href="single-product.html">Sony Smart TV - 2015</a></h2>
                        <div class="product-sidebar-price">
                            <ins>$700.00</ins> <del>$800.00</del>
                        </div>
                    </div>
                    <div class="thubmnail-recent">
                        <img src="img/product-thumb-1.jpg" class="recent-thumb" alt="">
                        <h2><a href="single-product.html">Sony Smart TV - 2015</a></h2>
                        <div class="product-sidebar-price">
                            <ins>$700.00</ins> <del>$800.00</del>
                        </div>
                    </div>
                </div>

                <div class="single-sidebar">
                    <h2 class="sidebar-title">Recent Posts</h2>
                    <ul>
                        <li><a href="#">Sony Smart TV - 2015</a></li>
                        <li><a href="#">Sony Smart TV - 2015</a></li>
                        <li><a href="#">Sony Smart TV - 2015</a></li>
                        <li><a href="#">Sony Smart TV - 2015</a></li>
                        <li><a href="#">Sony Smart TV - 2015</a></li>
                    </ul>
                </div>
            </div>

            <div class="col-md-8">
                <div class="product-content-right">
                    <div class="woocommerce">
                        <form method="post" action="#">
                            <table cellspacing="0" class="shop_table cart">
                                <thead>
                                    <tr>
                                        <th class="product-remove">&nbsp;</th>
                                        <th class="product-id">ID</th>
                                        <th class="product-thumbnail">Hình Ảnh</th>
                                        <th class="product-name">Tên Sản Phẩm</th>
                                        <th class="product-price">Đơn giá</th>
                                        <th class="product-quantity">Số Lượng</th>
                                        <th class="product-subtotal">Thành Tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in lstGioHang)
                                    {
                                        if (Model.MaSP == item.MaSP)
                                        {
                                            using (Html.BeginForm("CapNhatGioHang", "Cart", FormMethod.Post,  new { @id = "myform" }))
                                            {
                                     <tr class="cart_item">
                                        <td class="product-remove">
                                            <a href="#" class="updateIcon" onclick='document.forms["myform"].submit(); return false;' >Cập Nhật</a>
                                            <a title="Remove this item" class="delIcon" href="@Url.Action("XoaGioHang", "Cart", new { @id = item.MaSP })">Xóa</a>
                                        </td>

                                        <td class="product-id">
                                            @item.MaSP @Html.Hidden("MaSP", item.MaSP)
                                        </td>

                                        <td class="product-thumbnail">
                                            <a href="single-product.html"><img width="145" height="145" alt="poster_1_up" class="shop_thumbnail" src="~/Asset/img/@item.HinhChinh"></a>
                                        </td>

                                        <td class="product-name">
                                            <h3><a href="#">@item.TenSP</a></h3>
                                        </td>

                                        <td class="product-price">
                                            <span class="amount">@item.Gia.ToString("#,##") VNĐ </span>
                                        </td>

                                        <td class="product-quantity">
                                            <div class="qty">
                                                <p> @Html.TextBox("SoLuong", item.SoLuong)</p>
                                            </div>
                                        </td>
                                        <td class="product-subtotal">
                                            <span class="amount">@item.ThanhTien.ToString("#,##") VNĐ</span>
                                        </td>
                                        

                                    </tr>
                                            }
                                        }

                              else
                               {
                                <tr class="cart_item">

                                    <td class="product-remove">
                                        <a title="Remove this item" class="delIcon" href="@Url.Action("XoaGioHang" , "Cart" ,new { @id = item.MaSP })">Xóa</a>
                                        <a title="Edit this item" class="editIcon" href="@Url.Action("SuaGioHang" , "Cart" ,new { @id = item.MaSP })">Sửa</a>
                                    </td>

                                    <td class="product-thumbnail">
                                        <a href="single-product.html"><img width="145" height="145" alt="poster_1_up" class="shop_thumbnail" src="~/Asset/img/@item.HinhChinh"></a>
                                    </td>

                                    <td class="product-name">
                                        <h3><a href="#">@item.TenSP</a><span> @Html.Hidden("MaSP", item.MaSP)</span></h3>
                                    </td>

                                    <td class="product-price">
                                        <span class="amount">@item.Gia.ToString("#,##") VNĐ </span>
                                    </td>

                                    <td class="qty">
                                        <p>@item.SoLuong</p>                                        
                                    </td>

                                    <td class="product-subtotal">
                                        <span class="amount">@item.ThanhTien.ToString("#,##") VNĐ</span>
                                    </td>
                                </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

