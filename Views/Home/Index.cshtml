                    @foreach (var item in Model.Take(4))
                    {
                        <div class="single-wid-product">
                            <a href="@Url.Action("Details", "ShopPage", new { id = item.MaSP })"><img src="~/Asset/img/@item.HinhChinh" alt="" class="product-thumb"></a>
                            <h2><a href="@Url.Action("Details", "ShopPage", new { id = item.MaSP })">@item.TenSP</a></h2>
                            <div class="product-wid-rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                            <div class="product-wid-price">
                                <a href="@Url.Action("Details", "ShopPage", new { id = item.MaSP })" class="item_price">Price: @item.Gia.Value.ToString("#,##") VNĐ</a>
                            </div>
